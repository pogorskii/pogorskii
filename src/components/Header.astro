---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import {Icon} from "astro-icon/components";
---

<header>
	<nav>
		<h2><a href="/" class="text-2xl font-black tracking-tighter">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://twitter.com/astrodotbuild" target="_blank">
				<span class="sr-only">Follow me on X (Twitter)</span>
				<Icon name="logos:x" class='text-3xl transition hover:brightness-125 duration-200' fill="currentColor" />
			</a>
			<a href="https://github.com/withastro/astro" target="_blank">
				<span class="sr-only">Go to Astro's GitHub repo</span>
				<Icon name="github" class='text-3xl text-yellow transition hover:brightness-125 duration-200' />
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--yellow);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		@apply text-xl font-black transition duration-200;
	}
	nav a:hover {
		color: var(--purple);
		border-bottom-color: var(--purple);
	}
	nav a.active {
		text-decoration: none;
		color: var(--purple);
		border-bottom-color: var(--purple);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
